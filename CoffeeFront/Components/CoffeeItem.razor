<MudItem xs="12" sm="6" md="4">
    <MudCard Elevation="25" Class="rounded-lg pb-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Align="Align.Center">@coffee.Name</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudImage Src="@coffee.ImageUrl" Fluid="true"></MudImage>
            <MudText Typo="Typo.h5" Align="Align.Center">Price: @coffee.Price</MudText>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;">Add to Cart</MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>

@code {
    [Parameter]
    public CoffeeModel coffee { get; set; }
}
